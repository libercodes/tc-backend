{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist"
    },
    "lib": [
        "es5", 
        "es6", 
        "es7",
        "es2015", 
        "es2016",
        "es2017", 
        "es2018",
        "esnext"],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts"
    ],
    "include": [
        "src/**/*.ts", "src/middlewares/database.ts"
    ]
}